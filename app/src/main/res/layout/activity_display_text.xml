<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayTextActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/resultView_operand"

        android:textSize="20dp"
        android:layout_width="217dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView" />

    <EditText
        android:id="@+id/resultView_answer"
        android:textSize="20dp"
        android:layout_width="217dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultView_operand" />

    <EditText
            android:id="@+id/resultView"

            android:textSize="20dp"
            android:layout_width="217dp"
            android:layout_height="45dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rowOrderPreserved="false" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/resultView_answer">

        <Button
                android:id="@+id/button_ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_clear"
                android:onClick="onClick"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="4"/>

        <Button
                android:id="@+id/button_mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_mul"
                app:layout_column="4"
                app:layout_row="0"/>

        <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_3"
                app:layout_column="2"
                app:layout_row="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="259dp"/>

        <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_2"
                app:layout_column="1"
                app:layout_row="0"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="181dp"/>

        <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_4"
                app:layout_column="0"
                app:layout_row="1"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="331dp"/>

        <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_5"
                app:layout_column="1"
                app:layout_row="1"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="181dp"/>

        <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_6"
                app:layout_column="2"
                app:layout_row="1"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="259dp"/>

        <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_7"
                app:layout_column="0"
                app:layout_row="2"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="181dp"/>

        <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_8"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="259dp"/>

        <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_1"
                app:layout_column="0"
                app:layout_row="0"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="331dp"/>

        <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_9"
                app:layout_column="2"
                app:layout_row="2"
                tools:layout_editor_absoluteX="136dp"
                tools:layout_editor_absoluteY="331dp"/>

        <Button
                android:id="@+id/button_div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_div"
                app:layout_column="4"
                app:layout_row="1"/>

        <Button
                android:id="@+id/button_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_sub"
                app:layout_column="4"
                app:layout_row="3"/>

        <Button
                android:id="@+id/button_equals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_equals"
                app:layout_column="2"
                app:layout_row="3"/>

        <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_add"
                app:layout_column="4"
                app:layout_row="2"/>

        <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/button_0"
                app:layout_column="0"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3"/>

        <Button
                android:id="@+id/button_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@string/delete"
                app:layout_column="4"
                app:layout_row="4"/>
    </android.support.v7.widget.GridLayout>

    <TextView
            android:id="@+id/textView_operator"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/resultView_operand"
            app:layout_constraintEnd_toStartOf="@+id/resultView_operand"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultView"/>

</android.support.constraint.ConstraintLayout>